<mvc:View controllerName="ck.marketdata.controller.Candles" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:core="sap.ui.core" 
  xmlns="sap.m" 
  xmlns:fc="ui5lab.fc" 
  displayBlock="true">
  <Page enableScrolling="false" 
    showHeader="false">
    <subHeader>
      <Toolbar>
        <ComboBox selectedKey="{view>/asset}" 
          items="{symbols>/}" 
          change="onAssetChange">
          <items>
            <core:Item text="{symbols>asset}" 
              key="{symbols>asset}"/>
          </items>
        </ComboBox>
        <ComboBox selectedKey="{view>/timeframe}" 
          items="{timeframes>/}" 
          change="onTimeframeChange">
          <items>
            <core:Item text="{timeframes>}" 
              key="{timeframes>}"/>
          </items>
        </ComboBox>
        <DateRangeSelection dateValue="{view>/start}" 
          secondDateValue="{view>/end}" 
          change="onDateRangeChange" />
      </Toolbar>
    </subHeader>
    <content>
      <VBox height="100%">
        <fc:CandlestickChart candles="{/}" 
          padding="5 20 25 60">
          <fc:candles>
            <fc:Candle x="{time}" 
              open="{open}" 
              high="{high}" 
              low="{low}" 
              close="{close}"/>
          </fc:candles>
        </fc:CandlestickChart>
      </VBox>
    </content>
  </Page>
</mvc:View>
