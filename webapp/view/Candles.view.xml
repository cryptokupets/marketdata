<mvc:View controllerName="ck.marketdata.controller.Candles" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns:core="sap.ui.core" 
  xmlns="sap.m" 
  xmlns:fc="ui5lab.fc" 
  displayBlock="true">
  <Page enableScrolling="false" 
    showHeader="false">
    <subHeader>
      <Toolbar>
        <ComboBox selectedKey="{view>/asset}" 
          items="{Assets}" 
          change="onAssetChange">
          <items>
            <core:Item text="{key}" 
              key="{key}"/>
          </items>
        </ComboBox>
        <ComboBox selectedKey="{view>/timeframe}" 
          items="{Exchange/Timeframes}" 
          change="onTimeframeChange">
          <items>
            <core:Item text="{key}" 
              key="{key}"/>
          </items>
        </ComboBox>
        <DateRangeSelection dateValue="{view>/start}" 
          secondDateValue="{view>/end}" 
          change="onDateRangeChange" />
      </Toolbar>
    </subHeader>
    <content>
      <VBox height="100%" busy="{view>/busy}">
        <fc:CandlestickChart candles="{candles>/value}" 
          padding="5 20 25 60">
          <fc:candles>
            <fc:Candle x="{candles>time}" 
              open="{candles>open}" 
              high="{candles>high}" 
              low="{candles>low}" 
              close="{candles>close}"/>
          </fc:candles>
        </fc:CandlestickChart>
      </VBox>
    </content>
  </Page>
</mvc:View>
