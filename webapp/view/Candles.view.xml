<mvc:View controllerName="ck.marketdata.controller.Candles" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  xmlns:fc="ui5lab.fc"
  displayBlock="true" >
  <Page enableScrolling="false" 
    showHeader="false">
    <VBox height="100%">
      <fc:CandlestickChart candles="{/}" 
        padding="5 20 25 60">
        <fc:candles>
          <fc:Candle x="{time}" 
            open="{open}" 
            high="{high}" 
            low="{low}" 
            close="{close}"/>
        </fc:candles>
      </fc:CandlestickChart>
    </VBox>
  </Page>
</mvc:View>
