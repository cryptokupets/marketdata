<mvc:View controllerName="ck.marketdata.controller.Backtests" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.ui.table"
	xmlns:m="sap.m">
	<m:Page title="Backtests">
		<m:content>
			<Table id="backtests" 
				rows="{/Backtest}"
				title="Backtest"
				selectionMode="Single"
				selectionBehavior="RowOnly"
				visibleRowCountMode="Auto"
				rowSelectionChange="onRowSelectionChange">
				<columns>
					<Column>
						<m:Label text="Currency" />
						<template>
							<m:Text text="{currencyKey}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Asset" />
						<template>
							<m:Text text="{assetKey}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Timeframe" />
						<template>
							<m:Text text="{timeframe}" wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Profit" />
						<template>
							<m:Text text="{profit}" wrapping="false"/>
						</template>
					</Column>
					<!-- <Column width="11rem" hAlign="Center">
						<m:Label text="Delivery Date" />
						<template>
							<m:DatePicker value="{
								path: 'DeliveryDate',
								type: 'sap.ui.model.type.Date',
								formatOptions: {source: {pattern: 'timestamp'}}
							}"/>
						</template>
					</Column> -->
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>
