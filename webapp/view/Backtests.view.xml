<mvc:View controllerName="ck.marketdata.controller.Backtests" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.ui.table" 
	xmlns:m="sap.m">
	<m:Page title="Backtests" 
		showNavButton="true" 
		navButtonPress="onBackPress">
		<m:content>
			<Table id="backtests" 
				rows="{/Backtest}" 
				title="Backtest" 
				selectionMode="Single" 
				selectionBehavior="RowOnly" 
				visibleRowCountMode="Auto" 
				rowSelectionChange="onRowSelectionChange">
				<columns>
					<Column>
						<m:Label text="Currency" />
						<template>
							<m:Text text="{currencyKey}" 
								wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Asset" />
						<template>
							<m:Text text="{assetKey}" 
								wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Timeframe" />
						<template>
							<m:Text text="{timeframe}" 
								wrapping="false"/>
						</template>
					</Column>
					<Column>
						<m:Label text="Profit" />
						<template>
							<m:Text text="{profit}" 
								wrapping="false"/>
						</template>
					</Column>
				</columns>
			</Table>
		</m:content>
	</m:Page>
</mvc:View>
